<%- form_for @product do |f|%>
<%= f.error_messages %>
<p><label for="product_name">Nazwa</label>:
<%= f.text_field 'name' %></p>
<p><label for="product_price">Cena</label>:
<%= f.text_field 'price' %></p>
<p><label for="product_category">Kategoria</label>:
<%= f.collection_select(:category_id,
                         @categories, :id, :name) %></p>
<p><label for="product_description">Krotki opis</label><br/>
<%= f.text_area 'description' %></p>
<%= f.submit "Zapisz zmiany" %>
<%- end %>